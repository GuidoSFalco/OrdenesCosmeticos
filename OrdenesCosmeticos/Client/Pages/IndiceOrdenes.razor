@page "/ordenes"

<h3>IndiceOrdenes</h3>
<br />
<a class=" btn btn-success" href="ordenes/crear">Nuevo</a>
<br />
<table>
    <tr>
        <th>Usuario</th>
        <th>Compra</th>
    </tr>
    @if (ordenes == null)
    {
        <tr>Cargando...</tr>
    }
    else if (ordenes.Count == 0)
    {
        <tr>No existen ordenes</tr>
    }
    else
    {

        @foreach (var item in ordenes)
        {
            <tr>
                <td>@item.Usuario</td>
                <td>@item.Compra</td>
                <td><a class="btn btn-success" href="ordenes/editar/@item.Id/@item.Usuario/@item.Compra">Editar</a></td>
                <td><button class="btn btn-warning" @onclick="()=>Eliminar(item)">Eliminar</button></td>
            </tr>
        }
    }
</table>
